<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_240sdp"
    android:layout_margin="20dp"
    android:background="@drawable/tooltip_frame_light">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/blownormal"
            android:padding="30dp"
            android:text="You Win"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sdp"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView

                android:id="@+id/starOne"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/lock"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#ECF418" />

            <ImageView

                android:id="@+id/empty"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/lock"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#ECF418" />

            <ImageView

                android:id="@+id/starTwo"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/lock"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/number"
                app:layout_constraintLeft_toRightOf="@id/starOne"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#ECF418" />

            <ImageView

                android:id="@+id/starThree"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/lock"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/number"
                app:layout_constraintLeft_toRightOf="@id/starTwo"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#ECF418" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/main_button_click"
                android:letterSpacing="0.1"
                android:text="Restart"

                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/main_button_click"
                android:letterSpacing="0.1"
                android:text="Next"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>